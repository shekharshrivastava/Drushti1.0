<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.drushti">

    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.MainActivity" />
        <activity android:name=".views.ContactActivity" />
        <activity
            android:name=".views.DialerActivity"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity android:name=".views.MessageActivity" />
        <activity android:name=".views.EmergencyMessageActivity" />
        <activity android:name=".views.ContactMenuActivity" />
        <activity android:name=".views.ContactListActivity" />
        <activity android:name=".views.EnterNumberActivity" />
        <activity android:name=".views.EnterMessageNumberActivity" />
        <activity android:name=".views.EnterNameActivity" />
        <activity android:name=".views.EnterMessageActivity" />
        <activity android:name=".views.DeleteContactActivity" />
        <activity android:name=".views.MessageCategoriesActivity" />
        <activity android:name=".views.EmergencyActivity" />
        <activity android:name=".views.MessageInboxActivity"></activity>
    </application>

</manifest>